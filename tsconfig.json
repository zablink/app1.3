{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["next-auth"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/types",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
