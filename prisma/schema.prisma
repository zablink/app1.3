// prisma/schema.prisma (merged, final - relations fixed)
// - Updated to add missing opposite relation fields to fix Prisma validation errors.
// - Removed User.payouts to avoid duplicate/ambiguous relation with ReviewerPayout.
// IMPORTANT: Review and run `prisma db pull` before applying migrations to production.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ---------------------------
   MODELS
   --------------------------- */

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  password      String?  // ใช้กรณี email/password
  image         String?
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  shops         Shop[]   // ผู้ใช้สามารถเป็นเจ้าของร้านได้หลายร้าน
  accounts      Account[]
  sessions      Session[]

  // reviewer relations
  reviewers     Reviewer[]
  // NOTE: payouts field removed here to avoid missing opposite relation on ReviewerPayout.
  // If you want User.payouts, add a user relation to ReviewerPayout (I can add this if desired).
}

model Shop {
  id            String       @id @default(cuid())
  name          String
  description   String?
  address       String?
  lat           Float?
  lng           Float?
  image         String?
  category      ShopCategory @relation(fields: [categoryId], references: [id])
  categoryId    String
  owner         User         @relation(fields: [ownerId], references: [id])
  ownerId       String
  status        ShopStatus   @default(PENDING)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Ads package ปัจจุบัน (separate from subscription)
  adPackage     AdPackage?   @relation(fields: [adPackageId], references: [id])
  adPackageId   String?

  menus         Menu[]
  analytics     Analytics[]

  // Subscriptions & tokens & ads
  subscriptions ShopSubscription[]
  tokenWallet   TokenWallet?
  adPurchases   AdPurchase[]

  // Reviewer hires for this shop (opposite of ReviewerHire.shop)
  reviewerHires ReviewerHire[]
}

model ShopCategory {
  id        String   @id @default(cuid())
  name      String   @unique // เช่น ร้านอาหารตามสั่ง, ก๋วยเตี๋ยว, เครื่องดื่ม, เบเกอรี่
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shops     Shop[]
}

model Menu {
  id        String   @id @default(cuid())
  name      String
  price     Float
  image     String?
  shop      Shop     @relation(fields: [shopId], references: [id])
  shopId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdPackage {
  id        String   @id @default(cuid())
  name      String   // e.g., Free, Pro1, Pro2, Pro3, Special
  scope     AdScope
  priority  Int      // ใช้สำหรับจัดลำดับเวลาแสดงร้าน
  price     Float    @default(0.0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shops       Shop[]
  adPurchases AdPurchase[]  // <-- added opposite relation for AdPurchase.adPackage
}

model Analytics {
  id        String   @id @default(cuid())
  shop      Shop     @relation(fields: [shopId], references: [id])
  shopId    String
  date      DateTime @default(now())
  views     Int      @default(0)
  clicks    Int      @default(0) // เช่น click ไปยัง delivery platform
}

/* Auth related models (original) */
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

/* Geography models (kept from original) */
model Geography {
  id   Int    @id
  name String
  provinces Province[]
}

model Province {
  id          Int       @id
  name_th     String
  name_en     String
  geography   Geography @relation(fields: [geographyId], references: [id])
  geographyId Int
  amphures    Amphure[]
}

model Amphure {
  id         Int      @id
  name_th    String
  name_en    String
  province   Province @relation(fields: [provinceId], references: [id])
  provinceId Int
  tambons    Tambon[]
}

model Tambon {
  id         Int      @id
  zip_code   String?
  name_th    String
  name_en    String
  amphure    Amphure  @relation(fields: [amphureId], references: [id])
  amphureId  Int
  geom       String?  // WKT polygon
}

/* ---------------------------
   SUBSCRIPTION models (mapping to existing tables)
   --------------------------- */
model SubscriptionPackage {
  id          String   @id @default(cuid())
  name        String
  price       Float
  periodDays  Int
  tokenAmount Int?     // tokens granted when purchasing this subscription
  features    String?
  tier        subscription_tier?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  shopSubscriptions ShopSubscription[]

  @@map("subscription_packages")
}

model ShopSubscription {
  id               String   @id @default(cuid())
  shop             Shop     @relation(fields: [shopId], references: [id])
  shopId           String
  plan             SubscriptionPackage @relation(fields: [planId], references: [id])
  planId           String
  status           subscription_status   @default(ACTIVE)
  startedAt        DateTime @default(now())
  expiresAt        DateTime
  autoRenew        Boolean  @default(false)
  paymentProvider  String?
  paymentRef       String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now())

  @@map("shop_subscriptions")
}

/* ---------------------------
   TOKEN models (batch-based)
   --------------------------- */
model TokenWallet {
  id        String   @id @default(cuid())
  shop      Shop     @relation(fields: [shopId], references: [id])
  shopId    String   @unique
  balance   Int      @default(0)
  updatedAt DateTime @updatedAt
  purchases TokenPurchase[]
  usages    TokenUsage[]

  @@map("token_wallets")
}

model TokenPurchase {
  id          String   @id @default(cuid())
  wallet      TokenWallet @relation(fields: [walletId], references: [id])
  walletId    String
  amount      Int
  remaining   Int      // remaining tokens in this batch
  price       Float
  provider    String?
  providerRef String?
  createdAt   DateTime @default(now())
  expiresAt   DateTime

  @@map("token_purchases")
}

model TokenUsage {
  id          String   @id @default(cuid())
  wallet      TokenWallet @relation(fields: [walletId], references: [id])
  walletId    String
  type        String   // 'ad_purchase' | 'hire_reviewer' | 'other'
  referenceId String?
  amount      Int
  createdAt   DateTime @default(now())

  @@map("token_usages")
}

/* ---------------------------
   Ad purchases
   --------------------------- */
model AdPurchase {
  id          String   @id @default(cuid())
  shop        Shop     @relation(fields: [shopId], references: [id])
  shopId      String
  adPackage   AdPackage? @relation(fields: [adPackageId], references: [id])
  adPackageId String?
  position    String?
  scope       AdScope
  durationDays Int
  tokenCost   Int
  startAt     DateTime  @default(now())
  endAt       DateTime
  createdAt   DateTime  @default(now())
  provider    String?
  providerRef String?

  @@map("ad_purchases")
}

/* ---------------------------
   REVIEWER models & rates
   --------------------------- */
model Reviewer {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  bio         String?
  status      CreatorStatus @default(PENDING)
  approved    Boolean  @default(false)
  tier        CreatorTier?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  rates       ReviewerRate[]
  rateHistory ReviewerRateHistory[]
  hires       ReviewerHire[]
  payouts     ReviewerPayout[]

  @@map("reviewers")
}

model ReviewerRate {
  id          String   @id @default(cuid())
  reviewer    Reviewer @relation(fields: [reviewerId], references: [id])
  reviewerId  String
  skillLevel  String?  // e.g., 'junior', 'senior'
  pricePerJob Float
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  @@map("reviewer_rates")
}

model ReviewerRateHistory {
  id          String   @id @default(cuid())
  reviewer    Reviewer @relation(fields: [reviewerId], references: [id])
  reviewerId  String
  oldPrice    Float
  newPrice    Float
  changedAt   DateTime @default(now())
  reason      String?

  @@map("reviewer_rate_history")
}

model ReviewerHire {
  id          String   @id @default(cuid())
  reviewer    Reviewer @relation(fields: [reviewerId], references: [id])
  reviewerId  String
  shop        Shop     @relation(fields: [shopId], references: [id])
  shopId      String
  tokenCost   Int
  status      ReviewStatus
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  @@map("reviewer_hires")
}

model ReviewerPayout {
  id           String   @id @default(cuid())
  reviewer     Reviewer @relation(fields: [reviewerId], references: [id])
  reviewerId   String
  amount        Float
  bankAccount   String?
  reference     String?
  createdAt     DateTime @default(now())

  @@map("reviewer_payouts")
}

