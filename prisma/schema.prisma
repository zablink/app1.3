/* ---------------------------
   ENUMS (as you requested)
   --------------------------- */

/*
  Primary Role enum with expanded roles
*/
enum Role {
  USER
  SHOP
  CREATOR
  MCN_MANAGER
  AD_MANAGER
  ADMIN
}

/*
  Shop status workflow
*/
enum ShopStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

/*
  Creator (reviewer) status
*/
enum CreatorStatus {
  PENDING
  ACTIVE
  SUSPENDED
  REJECTED
}

/*
  Package types used historically / compatibility
*/
enum PackageType {
  FREE
  PRO1
  PRO2
  SPECIAL
}

/*
  Ad scope (as you asked)
*/
enum AdScope {
  SUBDISTRICT
  DISTRICT
  PROVINCE
  NATIONWIDE
}

/*
  Creator tier
*/
enum CreatorTier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}

/*
  Review / hire status lifecycle
*/
enum ReviewStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  SUBMITTED
  COMPLETED
  REJECTED
  CANCELLED
}

/*
  Withdrawal payout statuses
*/
enum WithdrawalStatus {
  PENDING
  PROCESSING
  COMPLETED
  REJECTED
}

/*
  Subscription enums (kept as requested)
*/
enum subscription_status {
  ACTIVE
  EXPIRED
  CANCELLED
  SUSPENDED
}

enum subscription_tier {
  FREE
  BASIC
  PRO
  PREMIUM
}